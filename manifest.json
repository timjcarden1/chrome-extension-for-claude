{
    "manifest_version": 3,
    "name": "AI Chat Feedback Collector",
    "version": "1.1.0",
    "description": "Quickly collect feedback on highlighted text in Claude, ChatGPT, and Grok with Command+I",
    "permissions": [
        "storage",
        "sidePanel",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "https://claude.ai/*",
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://grok.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Open Feedback Panel"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://claude.ai/*",
                "https://chat.openai.com/*",
                "https://chatgpt.com/*",
                "https://grok.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}